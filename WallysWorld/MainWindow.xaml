<Window x:Class="WallysWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallysWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Customer Search" HorizontalAlignment="Left" Margin="675,232,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click" Height="22"/>
        <DataGrid HorizontalAlignment="Stretch" AutoGenerateColumns="True" Height="166" Margin="462,254,-0.4,0" VerticalAlignment="Top" ItemsSource="{Binding Path=cusTable}" Name="dataGridCustomer" x:FieldModifier="public"/>
        <TextBox x:Name="custInfo" HorizontalAlignment="Left" Height="22" Margin="462,232,0,0" TextWrapping="Wrap" Text="Search for Customer" VerticalAlignment="Top" Width="208"/>

    </Grid>
</Window>
